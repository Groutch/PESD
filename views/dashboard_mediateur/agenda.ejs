<%include ../partials/head.ejs%>
<%include ../partials/navbar.ejs%>
<div class="container" id="rdv">
	<h4><strong>Veuillez selectionner une date ainsi que le candidat de votre choix afin de programmer un PESD avec celui-ci :</strong></h4>
</div>
<div class="container">
	<form method="POST" action='/rdv'>
		<input type="date" name="date">
		<input type="time" name="time" min="0" max="59">
		<select name="candidat">
			<%list.forEach(element=>{%>
			<option value="<%=element.idPersonne%>">
				<%= element.nom + ' ' + element.prenom%>
			</option>
			<%})%>
		</select>
		<button type="submit" class="btn btn-primary">Valider la prise de rendez-vous</button>
	</form>
</div>
<div class="container" id="rdv" class="random">
	<%if(locals.verif){%>
	<table>
		<%verif.forEach(element=>{%>
		<tr>
			<td><%=element.nom%></td>
			<td><%=element.prenom%></td>
			<td><%=element.date%></td>
		</tr>
		<%})%>
	</table>
	<%}%>
</div>
